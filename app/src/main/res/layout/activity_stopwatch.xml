<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.example.hgx95.hci_project.Stopwatch"
    android:id="@+id/activityStopwatch"
    android:theme="@style/AppTheme"

    android:background="@color/color_principal">


    <!--The complete time layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="5dp"


        android:id="@+id/chrono_clockLayout"

        android:layout_above="@+id/relativeLayout"
        android:layout_centerVertical="true"
        >


        <!--The Hour -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="99:99:89:00"
            android:layout_gravity="center_horizontal"

            android:id="@+id/textView"

            android:textColor="#3d8ad8"
            android:textSize="70sp"





            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="HH:MM:SS:MS"
            android:layout_gravity="center_horizontal"

            android:id="@+id/format_text"

            android:textColor="#3d8ad8"
            android:textSize="20sp"





            />



    </LinearLayout>


    <!--The buttons layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:id="@+id/relativeLayout"

        >




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/buttons"
            android:layout_centerHorizontal="true"
            android:paddingTop="20sp"
            android:orientation="horizontal"




            >



            <TextView


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"


                android:text="@string/play_button"

                android:id="@+id/start_chrono"


                android:textColor="@color/white"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick=""
                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stop_button"

                android:id="@+id/reset_chrono"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick=""
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pause_button"
                android:id="@+id/stop_chrono"
                android:layout_marginLeft="20dp"

                android:textColor="@color/white"
                android:textSize="40sp"
                android:clickable="true"
                android:onClick=""/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
