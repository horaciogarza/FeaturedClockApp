<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    android:id="@+id/activityMain">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/mad"
        android:scaleType="fitXY"
        android:contentDescription="The image used for some changes lol" />

    <TextClock
        android:id="@+id/mainActivityClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3d8ad8"
        android:textSize="70sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"


        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginTop="90sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15sp">



            <Button
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:background="@drawable/round_button"
                android:textSize="25sp"

                android:text="\uE83B"
                android:layout_marginEnd="15sp"
                android:clickable="true"
                android:id="@+id/timer"
                android:focusable="false"

                android:textColor="#ffffff"
                />

            <Button
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:background="@drawable/round_button"
                android:textSize="25sp"
                android:textColor="#ffffff"
                android:text="\uE802"
                android:id="@+id/stopwatch"
                android:layout_marginEnd="7.5sp"

                />

            <Button
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:background="@drawable/round_button"
                android:textSize="25sp"
                android:text="\uE82A"
                android:theme="@style/AppTheme"
                android:textColor="#ffffff"
                android:layout_marginStart="7.5sp"
                android:id="@+id/calendarText"
                />

            <Button
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:background="@drawable/round_button"
                android:textSize="25sp"
                android:text="@string/world_clock"
                android:theme="@style/AppTheme"
                android:textColor="#ffffff"
                android:layout_marginStart="15sp"
                android:id="@+id/world_clock"
                />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/date"
        android:layout_below="@+id/mainActivityClock"
        android:layout_centerHorizontal="true"
        android:textSize="23sp" />


</RelativeLayout>
